<T3DataStructure>
  	<sheets>
  		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:skinFlex/<%= params.slugifiedContentName %>/locallang.xml:flexform.<%= params.slugifiedContentName %>.sheets.general</sheetTitle>
		        </TCEforms>
				<type>array</type>
				<el>
					<file>
						<TCEforms>
							<label>LLL:EXT:skinFlex/<%= params.slugifiedContentName %>/locallang.xml:flexform.<%= params.slugifiedContentName %>.image</label>
							<config>
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>gif,jpg,jpeg,tif,bmp,pcx,tga,png,pdf,ai</allowed>
								<max_size>5000</max_size>
								<uploadfolder>uploads/skinFlex/<%= params.slugifiedContentName %>/</uploadfolder>
								<maxitems>1</maxitems>
								<size>1</size>
								<selectedListStyle>width:200px</selectedListStyle>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</file>
					<title>
						<TCEforms>
							<label>LLL:EXT:skinFlex/<%= params.slugifiedContentName %>/locallang.xml:flexform.<%= params.slugifiedContentName %>.title</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</title>
				</el>
			</ROOT>
  		</sDEF>
  	</sheets>
</T3DataStructure>


